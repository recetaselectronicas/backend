{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "describe": true,
    "expect": true,
    "it": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "max-len": ["warn", 180],
    "semi": ["error", "never"],
    "class-methods-use-this": "off",
    "comma-dangle": "off",
    "eol-last": "off",
    "no-plusplus": "off"
  }
}
